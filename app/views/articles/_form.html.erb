<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each  do |message| %>
   <div class="message_alert">
	    (*) <%= message %>
    </div>
	<%end%>    
	<div class="field"><%= f.text_field :title, placeholder: "Title", class:"form-control" %></div>
	<div class="field"><%= f.text_area :body, placeholder: "Write an article", style:"height:250px;", class:"form-control" %></div>
	
	<div class="field">
		Cover: <%= f.file_field :cover %>
	</div>
	
	<div class="field">
		<%= f.submit "Save", class:"btn_guardar" %>
	</div>
<% end %>	